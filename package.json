{
  "name": "@uni-helper/uni-deploy",
  "version": "0.1.0",
  "description": "自动化部署 uni-app 应用",
  "keywords": [
    "uni-app",
    "uniapp",
    "uni",
    "deploy"
  ],
  "homepage": "https://github.com/uni-helper/uni-deploy#readme",
  "bugs": {
    "url": "https://github.com/uni-helper/uni-deploy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uni-helper/uni-deploy.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json",
    "./*": "./dist/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ud": "./dist/cli.js",
    "uni-deploy": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check:types": "tsc --noEmit",
    "dev": "tsup --watch src",
    "lint": "run-p lint:eslint lint:markdownlint check:types test:coverage",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "release": "release-it",
    "prepare": "is-ci || husky install",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "globby": "^13.1.3",
    "got": "^12.5.3",
    "minidev": "^1.6.3",
    "miniprogram-ci": "^1.9.3",
    "p-retry": "^5.1.2",
    "picocolors": "^1.0.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "strip-json-comments": "^5.0.0",
    "unconfig": "^0.3.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt": "^17.3.0",
    "@modyqyw/fabric": "^5.14.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/lodash": "^4.14.191",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitest/coverage-c8": "^0.26.2",
    "@vitest/ui": "^0.26.2",
    "c8": "^7.12.0",
    "commitizen": "^4.2.6",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "release-it": "^15.6.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.2",
    "vue": "^3.2.45"
  },
  "packageManager": "pnpm@7.18.2",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
